
//program to find area and perimeter of rectangle using simple concept of c++

#include<iostream>
using namespace std;
int main()
{
int length, width, area, perimeter;

cout<<"Enter length and width of area and perimeter\n";

cout<<"Enter length of rectangle\n";
cin>>length;
cout<<"Enter width of rectangle\n";
cin>>width;
area=length*width;
perimeter=2*(length+width);
cout<<"Area="<<area;
cout<<"\nperimeter="<<perimeter;
return 0;
}
